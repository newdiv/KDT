<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com_pro_mapper.MemberMapper">
  <insert id="write">
  
  insert into member values(#{id},#{pw},#{name});
  </insert>
  
  
  <select id="list" resultType="com.myproject.model.MemberDTO" >
  select * from member;
  </select>
  <select id="detail" resultType="com.myproject.model.MemberDTO">
  select * from member
  where id=#{id}
  </select>
  <update id="modify">
  update member
  set pw = #{pw},
  name=#{name}
  where id=#{id}
  </update>
 <delete id="remove">
 delete from member
 where id=#{id}
 </delete>
 
 <select id="login" resultType="com.myproject.model.MemberDTO">
 select * from member
 where id=#{id}
 and pw=#{pw}
 </select>
  </mapper>