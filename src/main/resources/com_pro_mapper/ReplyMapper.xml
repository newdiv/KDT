<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com_pro_mapper.ReplyMapper">

	<insert id="rewrite">
		insert into reply(reply,id,bno)
		values(#{reply},#{id},#{bno})
	</insert>
	<select id="list" resultType="com.myproject.model.ReplyVO">
	select * from reply where bno=#{bno}
	
	</select>
	
	<update id="update">
		update reply
		set reply = #{reply}
		where rno = #{rno}
		and id=#{id}
	</update>
	
	<delete id="remove">
		delete from reply
		where rno=#{rno}
		and id=#{id}
	</delete>
	
	
	
	
	
	</mapper>